rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    
    /**
     * Check if user is authenticated
     */
    function isAuthenticated() {
      return request.auth != null;
    }
    
    /**
     * Check if the authenticated user owns the data
     * @param {string} userId - The user ID in the document path
     */
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    /**
     * Validate that role is valid (always 'athlete')
     */
    function isValidRole() {
      return request.resource.data.role is string 
        && request.resource.data.role == 'athlete';
    }
    
    /**
     * Validate that email is a string
     */
    function hasValidEmail() {
      return request.resource.data.email is string
        && request.resource.data.email.size() > 0;
    }
    
    // ============================================================================
    // USERS COLLECTION
    // ============================================================================
    
    /**
     * Users collection: Users can only read/write their own profile
     * - Authenticated users can read/write their own user document
     * - Collection-level queries are denied (prevents listing all users)
     * - Recursive wildcard pattern covers ALL nested subcollections and documents
     */
    match /users/{userId} {
      // Allow read/write only if user owns the document
      // read includes both get (individual document) and list (queries)
      allow read, write: if isOwner(userId);
      
      // Explicitly deny collection-level queries on users (listing all users)
      allow list: if false;
      
      // Validate user profile data on write
      allow create: if isOwner(userId) 
        && hasValidEmail()
        && isValidRole();
      
      allow update: if isOwner(userId)
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['email', 'role']) 
            || (hasValidEmail() && isValidRole()));
      
      // ========================================================================
      // RECURSIVE WILDCARD FOR ALL SUB-COLLECTIONS
      // ========================================================================
      
      /**
       * Recursive wildcard pattern that covers ALL nested documents and subcollections
       * This includes: trainingSystems, milestones, workouts, sessions, completedSessions,
       * profile, and any future subcollections automatically.
       * Pattern: {document=**} matches any path depth
       */
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ============================================================================
    // MASTER DATA COLLECTIONS
    // ============================================================================
    
    /**
     * Exercises collection: Master exercise data
     * - Authenticated users can read exercises
     * - Client writes are denied (data is managed server-side)
     */
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    /**
     * Variations collection: Exercise variations data
     * - Authenticated users can read variations
     * - Client writes are denied (data is managed server-side)
     */
    match /variations/{variationId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // ============================================================================
    // DEFAULT DENY ALL RULE
    // ============================================================================
    
    /**
     * Deny all access to any other collections or paths not explicitly defined above
     * This ensures that no new collections can be accessed without explicit rules
     */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

