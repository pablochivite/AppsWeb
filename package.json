{
  "name": "regain-app",
  "version": "1.0.0",
  "type": "module",
  "description": "REGAIN - Movement Engineering System",
  "scripts": {
    "start": "cd functions && npm run start",
    "dev": "vite --config config/vite.config.js",
    "build": "vite build --config config/vite.config.js",
    "preview": "vite preview --config config/vite.config.js",
    "firebase:deploy-rules": "firebase deploy --only firestore:rules",
    "firebase:test-rules": "firebase emulators:exec --only firestore 'echo Testing rules'",
    "firebase:init": "firebase init",
    "seed:user-history": "node scripts/seed-user-history.js",
    "upload:exercises": "node scripts/upload-exercises-to-firebase.js",
    "check:emulator": "node scripts/check-emulator-data.js",
    "setup:openai": "powershell -ExecutionPolicy Bypass -File scripts/start-emulators-with-key.ps1",
    "auto-setup": "powershell -ExecutionPolicy Bypass -File scripts/auto-setup.ps1",
    "emulators:start": "firebase emulators:start",
    "emulators:functions": "firebase emulators:start --only functions",
    "emulators:all": "firebase emulators:start --only functions,firestore",
    "functions:build": "cd functions; npm run build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:local": "cd functions && npm run test:local:workflow"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^13.6.0",
    "html2pdf.js": "^0.14.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.23",
    "firebase-tools": "^13.0.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.8",
    "vitest": "^1.0.0"
  }
}
